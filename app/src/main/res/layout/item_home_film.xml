<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_little">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/size_item_home"
        android:layout_height="@dimen/size_item_home"
        android:layout_marginHorizontal="@dimen/margin_little"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardMaxElevation="@dimen/elevation_card">
        <ImageView
            android:id="@+id/iv_item_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_item_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_extra_small"
        android:layout_marginHorizontal="@dimen/margin_little"
        tools:text="Samsung S10"/>

</LinearLayout>
